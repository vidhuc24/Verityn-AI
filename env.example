# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Tavily API Configuration
TAVILY_API_KEY=your_tavily_api_key_here

# Cohere API Configuration (for advanced retrieval reranking)
COHERE_API_KEY=your_cohere_api_key_here

# LangSmith Configuration
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=verityn-ai
LANGSMITH_TRACING_V2=true

# Qdrant Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=verityn_documents

# Application Configuration
APP_NAME=Verityn AI
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=8501

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
CORS_ORIGINS=["http://localhost:8501", "http://127.0.0.1:8501"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["pdf", "docx", "txt", "csv", "xlsx"]

# RAGAS Evaluation Configuration
RAGAS_EVALUATION_ENABLED=true
RAGAS_DATASET_PATH=./data/evaluation_datasets/

# Development Configuration
ENVIRONMENT=development
ENABLE_MONITORING=true
ENABLE_LOGGING=true 